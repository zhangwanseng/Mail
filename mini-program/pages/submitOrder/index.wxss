/* pages/submitOrder/index.wxss */
.submit_order{
    width: 100%;
    height: 100%;
    background-color: #efefef;
    position: relative;
}
/* 地址 */
.address{
    display: flex;
    padding: 0 10px;
    background-color: white;
    height: 80px;
    align-items: center;
    margin-bottom: 10px;
}
.address image{
  width: 20px;
  height: 20px;
  /* background-color: red; */
}
.address_left{
    width: 10%;
}
.address_center{
    flex: 1;
    line-height: 30px;
}
.address_right{
    width: 10%;
}
.myAddress{
    font-size: 12px;
    color: #999;
}
/* 订单 */
.shop_list{
    margin-bottom: 10px;
}
.shop_item {
    background-color: white;
    width: 100%;
    height: 140px;
    display: flex;
    padding: 0 10px;
    border: 1px solid #eee;
    align-items: center;
}

.shop_center {
    width: 30%;
}

.shop_item image {
    width: 100px;
    height: 100px;
    background-color: powderblue;
}

.shop_right {
    flex-direction: column;
    flex: 1;
    overflow: hidden;
    justify-content: space-between;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 100px;
    line-height: 50px;
    overflow: hidden;
}

.shop_right view {
    line-height: 20px;
    font-size: 14px;
}

.shop_item_footer {
    display: flex;
    position: relative;
}

.shop_price {
    display: flex;
    position: absolute;
    right: 35px;
}

.shop_price view {
   font-size: 12px;
   color: #999;
}
/* 留言 */
.message{
    display: flex;
    padding: 0 10px;
    height: 50px;
    background-color: white;
    line-height: 50px;
    align-items: center;
    margin-bottom: 10px;
}
/* 订单总额 */
.order_price{
    background-color: white;
    height: 50px;
    line-height: 50px;
    display: flex;
    padding: 0 10px;
    justify-content: space-between;
    /* border-bottom: 1px solid #efefef; */
}
/* 底部提交订单 */
.sub_footer{
    position: fixed;
    background-color: white;
    width: 100%;
    bottom: 0;
    display: flex;
    height: 50px;
    align-items: center;
    justify-content: space-between;
    padding-left: 10px;
    /* padding: 0 10px; */
}
.sub_order{
    background-color: red;
    height: 100%;
    color: white;
    line-height:50px;
    width: 120px;
    text-align: center;
}
/* 小计 */
.end_price{
    height: 50px;
    line-height: 50px;
    background-color: white;
    border-top: 1px solid #eee;
    padding: 0 10px;
    width: 94%;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}