/* pages/mine/index.wxss */
.mine-userinfo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 200px;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
}

.userinfo-avatar {
    overflow: hidden;
    width: 168rpx;
    height: 168rpx;
    margin: 20rpx;
    border-radius: 50%;
    box-shadow: 6px 6px 6px #ccc;
}

.phone {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
    margin-bottom: 10px;
}

.bind_phone {
    font-weight: 700;
    color: red;
}

.order {
    height: 140px;
    line-height: 50px;
    /* background-color: #ccc; */
    margin-bottom: 10px;
}

.order_top {
    display: flex;
    justify-content: space-between;
}

.order_top_left {
    font-weight: 600;
    font-size: 18px;
}

.order_top_right {
    font-size: 14px;
    color: #ccc;
}

.home_nav {
    width: 100%;
    height: 70px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    /* background-color: palegreen; */
}

.home_nav_item {
    width: 25%;
    text-align: center;
    line-height: 35px;
}

.home_nav image {
    width: 40%;
    height: 40px;
    text-align: center;
    line-height: 20px;
}

.home_nav_item view {
    height: 25px;
    line-height: 25px;
    font-size: 16px;
}

.mine_message {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 15px 0;
    margin-bottom: 10px;
}

.mine_message view {
    text-align: center;
    line-height: 25px;
}
.mine_message text{
    color: #3386bc;
}
.mine_footer {
    padding: 0 10px;
}

.mine_item {
    height: 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #efefef;
}
.mine_item_left{
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.mine_logo {
    width: 30px;
    height: 30px;
    padding-right: 10px;
}
.mine-avator{
    width: 100px;
    height: 100px;
    background-color: #efefef;
    border-radius: 50%;
    box-shadow: 4px 4px 8px 0px rgba(0, 0, 0, 0.16);
}
