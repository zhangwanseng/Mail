/* pages/searchResult/index.wxss */
.container{
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.home_top {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.home_top_search {
    /* text-align: center; */
    width: 50%;
    background: #efefef;
    /* margin: 20rpx; */
    border-radius: 16px;
    padding: 5px 50px;
    /* padding: 6px 0; */
}

.home_search {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    left: 6%;
    top: 6px;
}

.home_searchs {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    left: 35%;
    top: 10px;
}

.handleOptions {
    width: 100%;
    display: flex;
    justify-content: space-around;
    line-height: 50px;
    background-color: white;
}
.search_list_item{
    width: 100%;
    display: flex;
    padding: 10px;
    /* background-color: #efefef; */
    background-color: white;
    margin: 10px;
    border-radius: 10px;
}
.search_list image{
    /* width: 30%; */
    height: 120px;
    padding-right: 10px;
}
.search_list_desc{
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}
.search_list_price{
    color: red;
}
/* 纵着排的 */
.search_list_raw{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    gap: 12px;
    box-sizing: border-box;
    padding: 0 32rpx;
}
.search_list1{
    box-shadow: 0 4px 8px 0 rgba(0,0,0,.1);
    border-radius: 8rpx;
    width: calc((100% - 12px) / 2);
}
.search_list_item1 view{
    line-height: 30px;
}
.search_list_item1 image{
    width: 100%;
    height: 150px;
}
.active{
    color: red;
}